{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "bin/**"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "DATABASE_URL",
        "STRIPE_SECRET_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["setup"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:unit": {
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "env": ["NODE_ENV", "E2E_TEST"]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "outputs": []
    },
    "setup": {
      "cache": false,
      "outputs": ["node_modules/**", "vendor/**"]
    },
    "db:migrate": {
      "cache": false,
      "env": ["DATABASE_URL", "POSTGRES_*"]
    },
    "db:seed": {
      "cache": false,
      "dependsOn": ["db:migrate"],
      "env": ["DATABASE_URL", "POSTGRES_*"]
    },
    "proto": {
      "outputs": ["**/*.pb.go", "**/*_grpc.pb.go"],
      "inputs": ["**/*.proto"]
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}