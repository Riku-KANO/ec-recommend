# Environment Configuration Example
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
APP_ENV=development

# AWS Configuration
AWS_REGION=ap-northeast-1
AWS_PROFILE=ec-recommend-dev
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Cognito Configuration
COGNITO_USER_POOL_ID=ap-northeast-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=ap-northeast-1

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ec_recommend
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ec_recommend

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# OpenSearch Configuration
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_URL=http://localhost:9200

# LocalStack Configuration (for local development)
LOCALSTACK_ENDPOINT=http://localhost:4566
DYNAMODB_ENDPOINT=http://localhost:4566
S3_ENDPOINT=http://localhost:4566

# API Configuration
API_GATEWAY_URL=http://localhost:8080
GRPC_PORT=50051

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_USER_APP_URL=http://localhost:3000
NEXT_PUBLIC_SELLER_APP_URL=http://localhost:3001
NEXT_PUBLIC_ADMIN_APP_URL=http://localhost:3002

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxx

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=3600

# Email Configuration (using MailHog for local development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@ec-recommend.local

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Feature Flags
FEATURE_RECOMMENDATIONS=true
FEATURE_CHAT_SUPPORT=false
FEATURE_SOCIAL_LOGIN=false

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Cache Configuration
CACHE_TTL_PRODUCTS=300
CACHE_TTL_CATEGORIES=3600
CACHE_TTL_RECOMMENDATIONS=600

# Machine Learning Service
ML_SERVICE_URL=http://localhost:8000
ML_MODEL_VERSION=v1

# Monitoring
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=ec-recommend
PROMETHEUS_PORT=9090

# Development Tools
STORYBOOK_PORT=6006
PLAYWRIGHT_BASE_URL=http://localhost:3000